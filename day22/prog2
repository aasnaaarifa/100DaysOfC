//Q44: Write a program to find the sum of the series: 1 + 3/4 + 5/6 + 7/8 + â€¦ up to n terms.

#include <stdio.h>

int main() {
    int n;
    double sum = 0.0;

    printf("Enter number of terms: ");
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Invalid input\n");
        return 0;
    }

    sum = 1.0;

    for (int k = 2; k <= n; k++) {
        double num = 2.0 * k - 1.0;
        double den = 2.0 * k;
        sum += num / den;
    }

    printf("Approximate sum: %.1f\n", sum);
    return 0;
}