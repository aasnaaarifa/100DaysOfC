//Q120: Write a program to take a string input. Change it to sentence case.

#include <stdio.h>
#include <ctype.h>
int main() {
    char str[1000];
    FILE *inputFile, *outputFile;
    inputFile = fopen("input.txt", "r");
    if(inputFile == NULL){
        printf("Cannot open input file.\n");
        return 1;
    }
    fgets(str, sizeof(str), inputFile);
    fclose(inputFile);
    int i = 0;
    int newWord = 1; 
    while(str[i] != '\0'){
        if(isspace(str[i])){
            newWord = 1;
        } else {
            if(newWord && isalpha(str[i])){
                str[i] = toupper(str[i]);
                newWord = 0;
            } else {
                str[i] = tolower(str[i]);
            }
        }
        i++;
    }
    outputFile = fopen("output.txt", "w");
    if(outputFile == NULL){
        printf("Cannot open output file.\n");
        return 1;
    }
    fprintf(outputFile, "%s", str);
    fclose(outputFile);
    printf("String converted to sentence case and saved in output.txt\n");
    return 0;
}
